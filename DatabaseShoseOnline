CREATE TABLE ShoseType (
 ST_ID INT NOT NULL AUTO INCREMENT,
 ST_Name NVARCHAR(100) NOT NULL
)

CREATE TABLE Shose (
 S_ID INT NOT NULL AUTO INCREMENT,
 S_Code NVARCHAR(50) NOT NULL,
 S_Name NVARCHAR(100) NOT NULL,
 S_Price DECIMAL(18,2) NOT NULL,
 ST_ID INT NOT NULL
)

CREATE TABLE Promotion (
 P_ID INT NOT NULL AUTO INCREMENT,
 P_StartDate DATETIME() NOT NULL,
 P_EndDate DATETINE() NOT NULL,
 P_Discount DECIMAL(18,2) NOT NULL
)

CREATE TABLE Shose_Promotion (
 SP_ID INT NOT NULL AUTO INCREMENT,
 S_ID INT NOT NULL,
 P_ID INT NOT NULL
)
